<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'
  xmlns:s="urn:import:com.google.gwt.sample.showcase.client.content.cell">

  <ui:style>
    .scrollable {
      height: 400px;
      width: 250px;
      border: 1px solid #ccc;
      text-align: left;
    }
    
    .contactFormCell {
      padding-left: 20px;
    }
  </ui:style>

  <g:HTMLPanel>
    <table>
      <tr>
        <td
          valign='top'
          align='center'>
          <s:ShowMorePagerPanel
            addStyleNames='{style.scrollable}'
            ui:field='pagerPanel' />
          <s:RangeLabelPager
            ui:field='rangeLabelPager' />
        </td>
        <td
          class='{style.contactFormCell}'
          valign='top'
          align='center'>
          <s:ContactInfoForm
            ui:field='contactForm' />
          <br />
          <g:Button
            ui:field='generateButton'>
            <ui:msg
              key='cwCellListGenerateButton'>Generate 50 Contacts</ui:msg>
          </g:Button>
        </td>
        <td valign="top">
          <g:CheckBox ui:field="predictiveScrollingCheckbox"/>
          Predictive scrolling
          <br />
          <g:CheckBox ui:field="followUpFetchingCheckbox"/>
          Follow-up fetching
          <br />
          <g:CheckBox ui:field="conservativeStartCheckbox"/>
          Conservative start
          <br />
          <g:CheckBox ui:field="windowFillingCheckbox"/>
          Window filling
          <br />
          <g:CheckBox ui:field="keyHandlingCheckbox"/>
          Custom Key Handling
          <br />
          <br />
          <g:Button ui:field="reload">Reload</g:Button>
        </td>
      </tr>
      <tr>
        <td
          align='center'>
          <s:ShowMorePagerPanel
            ui:field='pager' />
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>
