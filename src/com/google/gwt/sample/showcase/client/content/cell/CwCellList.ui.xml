<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'
  xmlns:s="urn:import:com.google.gwt.sample.showcase.client.content.cell">

  <ui:style>
    .selfContact,
    .scrollable {
      width: 250px;
      text-align: left;
    }
    
    .scrollable {
      height: 100%;
      border: 1px solid #ccc;
    }
    
    .contactFormCell {
      padding-left: 20px;
    }
    
    .range {
	    font-size: 24px;
	    margin-top: 24px;
    }
  </ui:style>

  <g:HTMLPanel height="100%">
    <table style="height: 100%">
      <tr>
        <td
          valign='top'
          align='center'
          style="height: 100%">
          <g:FocusPanel
            addStyleNames='{style.selfContact}'
            ui:field='selfContactContainer' />
          <br />
          <s:ShowMorePagerPanel
            addStyleNames='{style.scrollable}'
            ui:field='pagerPanel' />
        </td>
        <td
          class='{style.contactFormCell}'
          valign='top'
          align='center'>
          <s:ContactInfoForm
            ui:field='contactForm' />
          <br />
          <g:Button
            ui:field='generateButton'>
            <ui:msg
              key='cwCellListGenerateButton'>Generate 50 Contacts</ui:msg>
          </g:Button>
          <s:RangeLabelPager
            ui:field='rangeLabelPager'
            styleName="{style.range}" /> 
        </td>
        <td valign="top">
          <g:CheckBox ui:field="predictiveScrollingCheckbox"/>
          Predictive scrolling
          <br />
          <g:CheckBox ui:field="followUpFetchingCheckbox"/>
          Follow-up fetching
          <br />
          <g:HTMLPanel visible="false">
	          <g:CheckBox ui:field="conservativeStartCheckbox"/>
	          Conservative start
	          <br />
          </g:HTMLPanel>
          <g:CheckBox ui:field="windowFillingCheckbox"/>
          Window filling
          <br />
          <g:CheckBox ui:field="keyHandlingCheckbox"/>
          Custom key handling
        </td>
      </tr>
      <tr>
        <td
          align='center'>
          <s:ShowMorePagerPanel
            ui:field='pager' />
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>
